rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Secret Box: Allow authenticated users to read/write their own questions/answers
    match /secret_box/{questionId} {
      allow read, write: if request.auth != null;
    }
    
    // Wishlist Dates: Allow authenticated users to read/write
    match /wishlist_dates/{wishlistId} {
        allow read, write: if request.auth != null;
    }

    // Peta Bintang Kenangan: Allow authenticated users to read/write
    match /memories/{memoryId} {
      allow read, write: if request.auth != null;
    }
  }
}
